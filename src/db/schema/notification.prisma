enum NotificationType {
    TASK_CREATED
    TASK_ASSIGNED
    TASK_EXPIRE_SOON
    TASK_EXPIRED
    TASK_UNASSIGNED
    TASK_REJECTED
    TASK_TO_REVIEW
    TASK_COMPLETED
}

model Notification {
    idNotification String @id @default(cuid())
    idUser String
    idFamily String
    type NotificationType
    title String
    idTask String
    createdAt DateTime @default(now())
    seen Boolean @default(false)
}